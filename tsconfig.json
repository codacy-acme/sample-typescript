{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "types": ["node", "mocha", "chai"]
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules"]
  }